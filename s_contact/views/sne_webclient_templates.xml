            <a target="_blank"
               t-attf-href="http://snine.vn/"
               class="badge text-bg-light">
                <img alt="Snine"
                     src="/s_contact/static/description/logoS9.png"
                     style="height: 25px !important;width: 25px !important;"/>
            </a>
        </xpath>
    </template>
</odoo>
